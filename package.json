{
    "name": "@umatch/query",
    "version": "3.6.1",
    "description": "Simple query builder for PostgreSQL. Inspired by knex.",
    "author": "Gabriel Okamoto <gabrielokamoto@hotmail.com>",
    "license": "MIT",
    "keywords": [
        "query builder",
        "knex",
        "postgresql",
        "typescript"
    ],
    "homepage": "https://github.com/umatch-oficial/query#readme",
    "repository": "https://github.com/umatch-oficial/query.git",
    "bugs": "https://github.com/umatch-oficial/query/issues",
    "main": "./lib/index.js",
    "files": [
        "src/**/*.ts",
        "lib/**/*.ts",
        "lib/**/*.ts.map",
        "lib/**/*.js"
    ],
    "scripts": {
        "build": "tsc --build src",
        "test": "jest",
        "lint": "eslint . --ext=.ts",
        "prepublishOnly": "npm run lint && npm run build && npm test",
        "prepare": "npm run build",
        "push-publish": "git push --follow-tags && npm publish --ignore-scripts",
        "release": "npm run lint && npm run build && npm test && commit-and-tag-version"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/luxon": "^3.3.0",
        "@types/node": "^20.3.0",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "@umatch/eslint-config": "^1.2.0",
        "commit-and-tag-version": "^11.2.1",
        "commitizen": "^4.2.6",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-exports": "1.0.0-beta.5",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.3.1",
        "luxon": "^3.3.0",
        "moment": "^2.29.4",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@umatch/utils": "^8.2.1"
    }
}
